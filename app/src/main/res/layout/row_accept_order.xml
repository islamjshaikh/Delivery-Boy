<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="15dp"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    android:layout_margin="7dp">
    <LinearLayout
        android:id="@+id/lnr_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:fontFamily="@font/amiri_regular"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_orderid"
            android:text="Order ID: ORD004802"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/text_color"
            style="@style/TextAppearance.AppCompat.Caption"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/red_circle" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:background="#14111111"

                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green_circle" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="1"
                    android:fontFamily="@font/amiri_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:id="@+id/txt_hotel_name"/>

                <TextView
                    android:layout_weight="1"
                    android:fontFamily="@font/amiri_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_sourceaddress"
                    android:text="Indore,Madhy pradesh,India"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:textSize="12sp"
                    android:textColor="@color/text_color"/>

                <TextView
                    android:fontFamily="@font/amiri_regular"

                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bon Jackman"

                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:id="@+id/txt_receiptname"/>

                <TextView
                    android:fontFamily="@font/amiri_regular"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_dest_address"
                    android:text="Rajwada,Madhy pradesh,India"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:textSize="12sp"
                    android:textColor="@color/text_color"/>

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="#14111111" />
            <LinearLayout
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:fontFamily="@font/amiri_regular"
                    android:id="@+id/txt_estimated_time_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ASAP"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"/>
                <TextView
                    android:fontFamily="@font/amiri_regular"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_price"
                    android:text=""
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"/>
                <TextView
                    android:fontFamily="@font/amiri_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_paymentmod"
                    android:text=""
                    android:textAllCaps="true"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:textSize="12sp"
                    android:textColor="@color/text_color"/>
            </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:fontFamily="@font/amiri_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_remark"
            android:text="test"
            android:paddingLeft="15dp"
            style="@style/TextAppearance.AppCompat.Caption"
            android:textSize="12sp"
            android:textColor="@color/red"/>
    </LinearLayout>
        <LinearLayout
            android:layout_margin="7dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_accept"
                android:background="#4B8509"
                android:textColor="@color/white"
                android:text="Accept"/>

            <Button
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_reject"
                android:background="#E10A0A"
                android:textColor="@color/white"
                android:text="Reject"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
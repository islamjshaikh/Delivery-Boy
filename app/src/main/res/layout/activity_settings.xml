<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:background="@drawable/backgroundlogo"
    tools:context=".Activity.SettingsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:src="@drawable/profile"
                android:id="@+id/img_profie"/>
            <LinearLayout
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_username"
                    android:fontFamily="@font/amiri_bold"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"/>
                <TextView
                    android:fontFamily="@font/amiri_regular"

                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_mob"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    style="@style/TextAppearance.AppCompat.Caption"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_edit"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/amiri_bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textColor="@color/lightgrey_text"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lgt_grey"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:id="@+id/lnr_chk_status"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/amiri_bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@color/lightgrey_text"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lgt_grey"
            android:layout_marginTop="5dp"/>


        <LinearLayout
            android:id="@+id/lnr_pendingorder"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/amiri_bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending Order"
                android:textColor="@color/lightgrey_text"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lgt_grey"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:id="@+id/lnr_completed_order"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/amiri_bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed Order"
                android:textColor="@color/lightgrey_text"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lgt_grey"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:id="@+id/lnr_logout"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/amiri_bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/lightgrey_text"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lgt_grey"
            android:layout_marginTop="5dp"/>
    </LinearLayout>


</RelativeLayout>